generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  // provider = "sqlite"
  // url      = "file:dev.sqlite"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model Config {
  id                    Int     @id @default(autoincrement())
  shop                  String  @unique
  customerAccountNumber String
  vendorId              String
  username              String
  password              String
  apiKey                String
  notificationHashKey   String?
}

//customCustomerId is made of the last 5 digits of the customerId provided by shopify and the last 5 digits of the orderNumber

model Orders {
  id                  Int               @id @default(autoincrement())
  orderId             String            @unique
  orderNumber         String            @unique
  orderName           String
  applicationNumber   String?
  paymentGatewayName  String
  paymentMethode      String
  orderAmount         Float
  confirmCreditStatus String?
  cancelStatus        String?
  fulfillStatus       String?
  partiallyFFStatus   String?
  refundStatus        String?
  customerDetails     CustomerDetails?
  fulfilledDetails    FulfilledDetails?
  refundedDetails     RefundsDetails?
}

model CustomerDetails {
  id               Int    @id @default(autoincrement())
  orderNumberRef   String @unique
  customerId       String
  customCustomerId String @unique
  firstName        String
  lastName         String
  email            String
  zip              String
  city             String
  street           String
  country          String
  order            Orders @relation(fields: [orderNumberRef], references: [orderNumber])
}

model FulfilledDetails {
  id                     Int    @id @default(autoincrement())
  orderNumberRef         String @unique
  billingType            String
  billingNumber          String
  billingDate            String
  billingReferenceNumber String
  dueDate                String
  billingAmount          Float
  billingNetAmount       Float?
  paymentType            String
  receiptNote            String
  order                  Orders @relation(fields: [orderNumberRef], references: [orderNumber])
}

model RefundsDetails {
  id                     Int     @id @default(autoincrement())
  orderNumberRef         String  @unique
  billingType            String
  billingNumber          String
  billingDate            String
  billingReferenceNumber String
  dueDate                String
  billingAmount          String
  billingNetAmount       String?
  paymentType            String
  receiptNote            String
  order                  Orders  @relation(fields: [orderNumberRef], references: [orderNumber])
}

